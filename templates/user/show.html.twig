{% extends 'base.html.twig' %}

{% block title %}User Info{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-image: url('/images/showtime-bg.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            background-attachment: fixed;
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .user-info-wrapper {
            max-width: 800px;
            margin: 3rem auto;
            background: linear-gradient(135deg, #ffffff, #f2f9f9);
            color: #0a1a2f;
            border-left: 6px solid #2bc0af;
            border-radius: 15px;
            padding: 2rem 3rem;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.15);
            transition: all 0.3s ease;
        }

        .user-info-wrapper:hover {
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            border-left-color: #0a1a2f;
            background: linear-gradient(135deg, #e7fbfb, #ffffff);
        }

        h1 {
            color: #2bc0af;
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 2rem;
            text-align: center;
        }

        .panel-container {
            display: flex;
            gap: 2rem;
            margin-top: 1rem;
            flex-wrap: wrap;
            justify-content: center;
        }

        .panel {
            flex: 1 1 350px;
            background-color: #f2f9f9;
            border-radius: 12px;
            padding: 1.5rem 2rem;
            box-shadow: 0 4px 12px rgba(43, 192, 175, 0.2);
            color: #0a1a2f;
            border-left: 6px solid #2bc0af;
            transition: border-color 0.3s ease;
        }

        .panel:hover {
            border-left-color: #0a1a2f;
            box-shadow: 0 6px 20px rgba(10, 26, 47, 0.3);
        }

        .panel h2 {
            margin-top: 0;
            margin-bottom: 1rem;
            color: #2bc0af;
            font-weight: 700;
            border-bottom: 2px solid #2bc0af;
            padding-bottom: 0.3rem;
        }

        p {
            margin: 0.5rem 0;
            font-size: 1.1rem;
        }

        strong {
            color: #0a1a2f;
        }

        .btn-custom {
            display: inline-block;
            margin-top: 1rem;
            padding: 0.6rem 1.4rem;
            border-radius: 8px;
            font-weight: 700;
            font-size: 1rem;
            cursor: pointer;
            text-decoration: none;
            border: 2px solid transparent;
            transition: all 0.3s ease;
            text-align: center;
            user-select: none;
        }

        .btn-delete {
            background-color: #2bc0af;
            color: #0a1a2f;
            border-color: #2bc0af;
        }

        .btn-delete:hover {
            background-color: #0a1a2f;
            color: #fff;
            border-color: #2bc0af;
        }

        .btn-purchases {
            background-color: #3498db;
            color: #fff;
            border-color: #2980b9;
            margin-left: 10px;
        }

        .btn-purchases:hover {
            background-color: #2980b9;
            color: #e1e9f0;
        }

        .btn-homepage {
            background-color: #2bc0af;
            color: #0a1a2f;
            border-color: #2bc0af;
            margin-top: 2rem;
            display: inline-block;
            width: 150px;
            text-align: center;
        }

        .btn-homepage:hover {
            background-color: #0a1a2f;
            color: #fff;
            border-color: #2bc0af;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="user-info-wrapper">
        <h1>User</h1>

        <div class="panel-container">
            <div class="panel">
                <h2>Details</h2>
                <p><strong>ID:</strong> {{ user.id }}</p>
                <p><strong>Email:</strong> {{ user.email }}</p>
                <a href="{{ path('app_user_delete', {id: user.id}) }}" class="btn-custom btn-delete">Delete</a>
            </div>

            <div class="panel">
                <h2>Additional Details</h2>
                {% if user.userDetails %}
                    <p><strong>First Name:</strong> {{ user.userDetails.firstName }}</p>
                    <p><strong>Last Name:</strong> {{ user.userDetails.lastName }}</p>
                    <p><strong>Age:</strong> {{ user.userDetails.age }}</p>
                    <p><strong>Role:</strong> {{ user.userDetails.role }}</p>

                    {% if is_granted('ROLE_CUSTOMER') %}
                        <a href="{{ path('app_user_purchase_show', {id: user.id}) }}" class="btn-custom btn-purchases">View Purchases</a>
                    {% endif %}
                {% else %}
                    <p>No additional details available.</p>
                {% endif %}
            </div>
        </div>

        {% if is_granted('ROLE_CUSTOMER') %}
            <a href="{{ path('customer_homepage') }}" class="btn-custom btn-homepage">Homepage</a>
        {% else %}
            <a href="{{ path('admin_homepage') }}" class="btn-custom btn-homepage">Homepage</a>
        {% endif %}
    </div>
{% endblock %}
