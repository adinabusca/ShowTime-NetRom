{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #0a1a2f;
            color: white;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #132744;
            margin-bottom: 20px;
        }
        th, td {
            padding: 10px;
            border: 1px solid #2d3e50;
            text-align: left;
        }
        th {
            background-color: #1f3a5f;
        }
        tr:hover {
            background-color: #2b486a;
        }
        .pagination {
            display: flex;
            justify-content: center;
            list-style: none;
            padding: 0;
        }
        .pagination li {
            margin: 0 5px;
        }
        .pagination a, .pagination span {
            color: white;
            padding: 6px 12px;
            text-decoration: none;
            background: #1f3a5f;
            border-radius: 4px;
        }
        .pagination .current {
            background: #4a90e2;
        }
    </style>

    <h1>User Details</h1>

    <table>
        <thead>
        <tr>
            <th>User ID</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Role</th>
        </tr>
        </thead>
        <tbody>
        {% for detail in pagination %}
            <tr>
                <td>{{ detail.user.id }}</td>
                <td>{{ detail.user.email }}</td>
                <td>{{ detail.firstName }}</td>
                <td>{{ detail.lastName }}</td>
                <td>{{ detail.age }}</td>
                <td>{{ detail.role }}</td>
            </tr>
        {% else %}
            <tr><td colspan="6">No user details found.</td></tr>
        {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(pagination) }}
{% endblock %}
