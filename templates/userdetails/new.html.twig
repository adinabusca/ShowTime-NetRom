{% extends 'base.html.twig' %}

{% block title %}Create User Details{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: #0a1a2f !important;
            color: white;
            font-family: sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 1rem;
            background-color: #132235;
            border-radius: 8px;
            border: 1px solid #1c2b3a;
        }

        h1 {
            border-bottom: 1px solid #1c2b3a;
            padding-bottom: 0.5rem;
            margin-bottom: 1.5rem;
        }

        label.form-label {
            color: #70c8d6;
            font-weight: 600;
        }

        input.form-control {
            background-color: white;
            color: #0a1a2f;
            border: 1px solid #1c2b3a;
            border-radius: 4px;
            padding: 0.375rem 0.75rem;
        }

        input.form-control:focus {
            border-color: #2bc0af;
            box-shadow: 0 0 0 0.25rem rgba(43, 192, 175, 0.5);
            color: #0a1a2f;
        }

        .btn-primary {
            background-color: #2bc0af;
            border: none;
            color: #070e1e;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-primary:hover {
            background-color: #1f8f85;
        }

        a {
            display: inline-block;
            margin-top: 1rem;
            color: #2bc0af;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .row.g-3 > div {
            margin-bottom: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Create User Details for {{ user.email }}</h1>

        {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}

        <div class="col-md-6">
            {{ form_label(form.firstName, 'First Name', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.firstName) }}
        </div>

        <div class="col-md-6">
            {{ form_label(form.lastName, 'Last Name', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.lastName) }}
        </div>

        <div class="col-md-6">
            {{ form_label(form.age, 'Age', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.age) }}
        </div>

        <div class="col-12">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>

        {{ form_end(form) }}

        <a href="{{ path('app_user_show', {id: user.id}) }}">Back to User</a>
    </div>
{% endblock %}
