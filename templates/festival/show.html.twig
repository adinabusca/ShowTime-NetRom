{% extends 'base.html.twig' %}

{% block title %}Festival Details{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #0a1a2f;
            color: white;
            font-family: sans-serif;
        }

        .festival-details {
            max-width: 600px;
            margin: 2rem auto;
            background-color: #132235;
            padding: 1.5rem;
            border-radius: 8px;
            border: 1px solid #1c2b3a;
        }

        .festival-details h1 {
            margin-top: 0;
            border-bottom: 1px solid #1c2b3a;
            padding-bottom: 0.5rem;
        }

        .festival-details p {
            margin: 0.5rem 0;
        }

        .label {
            font-weight: bold;
            color: #4a90e2;
        }

        .performances {
            margin-top: 1.5rem;
            padding-top: 1rem;
            border-top: 1px solid #1c2b3a;
        }

        .performances ul {
            padding-left: 1.2rem;
        }

        .performances li {
            margin-bottom: 0.5rem;
        }
    </style>

    <div class="festival-details">
        <h1>{{ festival.name }}</h1>

        <p><span class="label">Location:</span> {{ festival.location }}</p>
        <p><span class="label">Start Date:</span> {{ festival.startDate ? festival.startDate|date('F j, Y') : 'N/A' }}</p>
        <p><span class="label">End Date:</span> {{ festival.endDate ? festival.endDate|date('F j, Y') : 'N/A' }}</p>
        <p><span class="label">Price:</span> ${{ festival.price }}</p>


    </div>
    <div class="performances">
        <h3 class="label">Performances:</h3>
        {% if festival.performances|length > 0 %}
            <ul>
                {% for performance in festival.performances %}
                    <li>
                        {{ performance.artist.name }},
                        {{ performance.artist.musicGenre }}
                    </li>

                {% endfor %}
            </ul>
        {% else %}
            <p>No performances listed for this festival.</p>
        {% endif %}
    </div>
    <a href="{{ path('app_festival') }}"><button type="button" class="btn btn-outline-light">Back To Festival List</button></a>
{% endblock %}
