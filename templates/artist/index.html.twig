{% extends 'base.html.twig' %}

{% block title %}Artists{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #0a1a2f;
            color: white;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #132744;
            margin-bottom: 20px;
        }
        th, td {
            padding: 12px;
            border: 1px solid #2d3e50;
            text-align: left;
        }
        th {
            background-color: #1f3a5f;
        }
        tr:hover {
            background-color: #2b486a;
        }
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 1rem;
            list-style: none;
            padding: 0;
        }

        .pagination li {
            margin: 0 5px;
        }

        .pagination a, .pagination span {
            padding: 0.5em 1em;
            color: white;
            background-color: #1c2b3a;
            border: 1px solid #2bc0af;
            border-radius: 4px;
            text-decoration: none;
        }

        .pagination .current {
            background-color: #2bc0af;
            color: #0a1a2f;
            font-weight: bold;
        }

        .pagination a:hover {
            background-color: #2bc0af;
            color: #0a1a2f;
        }
    </style>

    <h1>Artist List</h1>
    <form method="get" class="mb-4" style="display: flex; flex-wrap: wrap; gap: 1rem; align-items: flex-end;">
        <div>
            <label for="artist">Artist</label><br>
            <input type="text" id="artist" name="artist" class="form-control" placeholder="Artist name"
                   value="{{ artistSearch|default('') }}">
        </div>
        <div>
            <button type="submit" class="btn btn-outline-light">Search</button>
        </div>
        {% if artistSearch %}
            <div>
                <a href="{{ path('app_artist') }}" class="btn btn-outline-dark" style="background-color: #2bc0af;">Reset</a>
            </div>
        {% endif %}
    </form>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for artist in pagination %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.name }}</td>
                <td>{{ artist.musicGenre }}</td>
                <td>
                    <a href="{{ path('app_artist_edit', {id: artist.id}) }}"><button type="button" class="btn btn-outline-light">Edit</button></a>
                    <a href="{{ path('app_artist_show', {id: artist.id}) }}"><button type="button" class="btn btn-outline-light">Show</button></a>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="4">No artists found.</td></tr>
        {% endfor %}
        </tbody>
    </table>
    <td><a href="{{ path('app_artist_new') }}"><button type="button" class="btn btn-outline-light">Create</button></a></td>

    {{ knp_pagination_render(pagination) }}
{% endblock %}
