{% extends 'base.html.twig' %}

{% block title %}Artist Details{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #0a1a2f;
            color: white;
            font-family: sans-serif;
        }

        .artist-details {
            max-width: 600px;
            margin: 2rem auto;
            background-color: #132235;
            padding: 1.5rem;
            border-radius: 8px;
            border: 1px solid #1c2b3a;
        }

        .artist-details h1 {
            margin-top: 0;
            border-bottom: 1px solid #1c2b3a;
            padding-bottom: 0.5rem;
        }

        .artist-details p {
            margin: 0.5rem 0;
        }

        .label {
            font-weight: bold;
            color: #4a90e2;
        }

        .performances {
            margin-top: 1.5rem;
            padding-top: 1rem;
            border-top: 1px solid #1c2b3a;
        }

        .performances ul {
            padding-left: 1.2rem;
        }

        .performances li {
            margin-bottom: 0.5rem;
        }
    </style>

    <div class="artist-details">
        <h1>{{ artist.name }}</h1>

        <p><span class="label">Music Genre:</span> {{ artist.musicGenre }}</p>
    </div>
    <div class="performances">
        <h3 class="label">Performances:</h3>
        {% if artist.performances|length > 0 %}
            <ul>
                {% for performance in artist.performances %}
                    <li>
                        {{ performance.festival.name }}:
                        <p><span class="label">Location:</span> {{ performance.festival.location }}</p>
                        <p><span class="label">Start Date:</span> {{ performance.festival.startDate ? performance.festival.startDate|date('F j, Y') : 'N/A' }}</p>
                        <p><span class="label">End Date:</span> {{ performance.festival.endDate ? performance.festival.endDate|date('F j, Y') : 'N/A' }}</p>
                        <p><span class="label">Price:</span> ${{ performance.festival.price }}</p>
                    </li>

                {% endfor %}
            </ul>
        {% else %}
            <p>No performances listed for this festival.</p>
        {% endif %}
    </div>
    <a href="{{ path('app_artist') }}"><button type="button" class="btn btn-outline-light">Back To Artist List</button></a>
{% endblock %}

