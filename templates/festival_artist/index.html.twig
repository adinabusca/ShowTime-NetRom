{% extends 'base.html.twig' %}

{% block title %}Festival Performances{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #0a1a2f;
            color: white;
        }

        a {
            color: white;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
            color: #4a90e2;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #132744;
            margin-bottom: 20px;
        }
        th, td {
            padding: 12px;
            border: 1px solid #2d3e50;
            text-align: left;
        }
        th {
            background-color: #1f3a5f;
        }
        tr:hover {
            background-color: #2b486a;
        }
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 1rem;
            list-style: none;
            padding: 0;
        }

        .pagination li {
            margin: 0 5px;
        }

        .pagination a, .pagination span {
            padding: 0.5em 1em;
            color: white;
            background-color: #1c2b3a;
            border: 1px solid #2bc0af;
            border-radius: 4px;
            text-decoration: none;
        }

        .pagination .current {
            background-color: #2bc0af;
            color: #0a1a2f;
            font-weight: bold;
        }

        .pagination a:hover {
            background-color: #2bc0af;
            color: #0a1a2f;
        }
        body {
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            background-attachment: fixed;
            color: white; /* Optional: text color for readability */
        }
        .custom-navbar {
            background-color: #0a1a2f !important;
        }

        .custom-navbar .nav-link,
        .custom-navbar .navbar-brand {
            color: #2bc0af !important;
        }

        .custom-navbar .nav-link:hover,
        .custom-navbar .navbar-brand:hover {
            color: #1f8f85 !important; /* Slightly darker teal for hover */
        }

        /* Override the navbar-toggler icon color */
        .custom-navbar .navbar-toggler-icon {
            filter: invert(66%) sepia(44%) saturate(3399%) hue-rotate(146deg) brightness(89%) contrast(88%);
        }
    </style>

    <nav class="navbar navbar-expand-lg navbar-dark custom-navbar" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="{{ path('app_homepage') }}">ShowTime</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_festival') }}">Festivals</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_artist') }}">Artists</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_user') }}">Users</a>
                    </li>

                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_user_show', {'id': app.user.id}) }}">My Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <h1>Festival Performances</h1>

    <form method="get" class="mb-4" style="display: flex; flex-wrap: wrap; gap: 1rem; align-items: flex-end;">
        <div>
            <label for="festival">Festival</label><br>
            <input type="text" id="festival" name="festival" class="form-control" placeholder="Festival name"
                   value="{{ festivalSearch|default('') }}">
        </div>
        <div>
            <label for="artist">Artist</label><br>
            <input type="text" id="artist" name="artist" class="form-control" placeholder="Artist name"
                   value="{{ artistSearch|default('') }}">
        </div>
        <div>
            <button type="submit" class="btn btn-outline-light">Search</button>
        </div>
        {% if festivalSearch or artistSearch %}
            <div>
                <a href="{{ path('app_festival_artist') }}" class="btn btn-outline-dark" style="background-color: #2bc0af;">Reset</a>
            </div>
        {% endif %}
    </form>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Festival</th>
            <th>Artist</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for performance in pagination %}
            <tr>
                <td>{{ performance.id }}</td>
                <td>
                    <a href="{{ path('app_festival_show', {id: performance.festival.id}) }}">
                        {{ performance.festival.name }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('app_artist_show', {id: performance.artist.id}) }}">
                        {{ performance.artist.name }}
                    </a>
                </td>
                <td><a href="{{ path('app_festival_artist_delete', {id: performance.id}) }}"><button type="button" class="btn btn-outline-light">Delete</button></a></td>
            </tr>
        {% else %}
            <tr><td colspan="3">No performances found.</td></tr>
        {% endfor %}
        </tbody>
    </table>
    <td><a href="{{ path('app_festival_artist_new') }}"><button type="button" class="btn btn-outline-light"> +Create</button></a></td>
    {{ knp_pagination_render(pagination) }}
{% endblock %}

