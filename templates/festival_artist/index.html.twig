{% extends 'base.html.twig' %}

{% block title %}Festival Performances{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #0a1a2f;
            color: white;
        }

        a {
            color: white;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
            color: #4a90e2;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #132744;
            margin-bottom: 20px;
        }
        th, td {
            padding: 12px;
            border: 1px solid #2d3e50;
            text-align: left;
        }
        th {
            background-color: #1f3a5f;
        }
        tr:hover {
            background-color: #2b486a;
        }
        .pagination {
            display: flex;
            justify-content: center;
            list-style: none;
            padding-left: 0;
        }
        .pagination li {
            margin: 0 5px;
        }
        .pagination a, .pagination span {
            color: white;
            padding: 6px 12px;
            text-decoration: none;
            background: #1f3a5f;
            border-radius: 4px;
        }
        .pagination .current {
            background: #4a90e2;
        }
    </style>

    <h1>Festival Performances</h1>

    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Festival</th>
            <th>Artist</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for performance in pagination %}
            <tr>
                <td>{{ performance.id }}</td>
                <td>
                    <a href="{{ path('app_festival_show', {id: performance.festival.id}) }}">
                        {{ performance.festival.name }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('app_artist_show', {id: performance.artist.id}) }}">
                        {{ performance.artist.name }}
                    </a>
                </td>
                <td><a href="{{ path('app_festival_artist_delete', {id: performance.id}) }}">Delete</a></td>
            </tr>
        {% else %}
            <tr><td colspan="3">No performances found.</td></tr>
        {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(pagination) }}
{% endblock %}

