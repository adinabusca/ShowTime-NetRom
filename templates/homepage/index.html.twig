{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: #0a1a2f !important;
            background-image:
                radial-gradient(circle at 20% 30%, rgba(255, 110, 196, 0.3) 0%, transparent 60%),
                radial-gradient(circle at 70% 20%, rgba(43, 192, 175, 0.25) 0%, transparent 50%),
                radial-gradient(circle at 50% 70%, rgba(255, 221, 89, 0.2) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(120, 115, 245, 0.25) 0%, transparent 50%),
                radial-gradient(circle at 30% 80%, rgba(255, 94, 87, 0.2) 0%, transparent 50%),
                radial-gradient(circle at 90% 40%, rgba(170, 255, 102, 0.2) 0%, transparent 50%);
            color: white;
            font-family: 'Segoe UI', sans-serif;
            text-align: center;
            min-height: 100vh;
            padding-top: 10vh;
        }

        .home-container {
            background-color: #132235;
            max-width: 500px;
            margin: 0 auto;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 10px #1c2b3a;
        }

        h1 {
            margin-bottom: 1rem;
        }

        .btn {
            display: block;
            width: 100%;
            padding: 0.75rem;
            margin: 1rem 0;
            background-color: #2bc0af;
            color: #0a1a2f;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            font-size: 1rem;
            cursor: pointer;
            text-decoration: none;
        }

        .btn:hover {
            background-color: #1f8f85;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="home-container">
        <h1>Welcome to Show Time</h1>
        <p>Please login or register to continue.</p>

        <a href="{{ path('app_login') }}" class="btn">Login</a>
        <a href="{{ path('app_user_new') }}" class="btn">Register</a>
    </div>
{% endblock %}
